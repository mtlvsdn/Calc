<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.MainPage"
             Title="Calculator">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="20">
        <HorizontalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="End">
            <Label Text="Theme:" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark=White}"/>
            <Switch x:Name="ThemeSwitch" Toggled="OnThemeSwitchToggled"/>
        </HorizontalStackLayout>

        <Button Grid.Row="1"
                Text="View History"
                Clicked="OnViewHistoryClicked"
                HorizontalOptions="End"
                Margin="0,10"/>

        <Label Grid.Row="2" 
               x:Name="DisplayLabel"
               Text="0" 
               FontSize="48" 
               HorizontalOptions="End" 
               Margin="0,20"
               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark=White}"/>

        <Grid Grid.Row="3" RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*,*,*" RowSpacing="5" ColumnSpacing="5">
            <!-- Row 1 -->
            <Button Text="C" Grid.Row="0" Grid.Column="0" Clicked="OnClearClicked"/>
            <Button Text="±" Grid.Row="0" Grid.Column="1" Clicked="OnSignChangeClicked"/>
            <Button Text="%" Grid.Row="0" Grid.Column="2" Clicked="OnPercentClicked"/>
            <Button Text="÷" Grid.Row="0" Grid.Column="3" Clicked="OnOperatorClicked"/>

            <!-- Row 2 -->
            <Button Text="7" Grid.Row="1" Grid.Column="0" Clicked="OnNumberClicked"/>
            <Button Text="8" Grid.Row="1" Grid.Column="1" Clicked="OnNumberClicked"/>
            <Button Text="9" Grid.Row="1" Grid.Column="2" Clicked="OnNumberClicked"/>
            <Button Text="×" Grid.Row="1" Grid.Column="3" Clicked="OnOperatorClicked"/>

            <!-- Row 3 -->
            <Button Text="4" Grid.Row="2" Grid.Column="0" Clicked="OnNumberClicked"/>
            <Button Text="5" Grid.Row="2" Grid.Column="1" Clicked="OnNumberClicked"/>
            <Button Text="6" Grid.Row="2" Grid.Column="2" Clicked="OnNumberClicked"/>
            <Button Text="-" Grid.Row="2" Grid.Column="3" Clicked="OnOperatorClicked"/>

            <!-- Row 4 -->
            <Button Text="1" Grid.Row="3" Grid.Column="0" Clicked="OnNumberClicked"/>
            <Button Text="2" Grid.Row="3" Grid.Column="1" Clicked="OnNumberClicked"/>
            <Button Text="3" Grid.Row="3" Grid.Column="2" Clicked="OnNumberClicked"/>
            <Button Text="+" Grid.Row="3" Grid.Column="3" Clicked="OnOperatorClicked"/>

            <!-- Row 5 -->
            <Button Text="0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Clicked="OnNumberClicked"/>
            <Button Text="." Grid.Row="4" Grid.Column="2" Clicked="OnDecimalClicked"/>
            <Button Text="=" Grid.Row="4" Grid.Column="3" Clicked="OnEqualsClicked"/>
        </Grid>
    </Grid>
</ContentPage> 